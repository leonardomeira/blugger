<%- include ('../../partials/head.ejs') %>

    <div class="container">
        <br>
        <h1>Artigos</h1>
        <br>
        <a class="btn btn-info" href="/admin/articles/new">+ Novo</a>
        <br><br>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <%articles.forEach(article => { %>
                <tr>
                    <th><%= article.id %></th>
                    <th><%= article.title%></th>
                    <th><%= article.slug %></th>
                    <th><%= article.category.title %></th>
                    <th>
                        <a href="/admin/articles/edit/<%= article.id %>" class="btn btn-warning">Editar</a>
                        <form method="POST" action="/admin/articles/delete" style="display: inline" onsubmit="deleteVerification(event, this)">
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        function deleteVerification(event, form) {
            event.preventDefault()
            confirm('Você deseja realmente deletar este artigo?')
            if (confirm) {
                form.submit()
            }
        }
    </script>
