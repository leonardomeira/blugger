    <div class="container mt-5 mb-5">
        <h1>Artigos</h1>
        <% result.articles.rows.forEach(article => { %>
            <div class="card mt-3 mb-3">
                <div class="card-body">
                    <h3 style="display: flex; justify-content: space-between;">
                        <%= article.title %>
                            <a href="/<%= article.slug %>">Ler artigo >></a>
                    </h3>
                </div>
            </div>
        <% }) %>
        <div class="row mt-3">
            <div class="col col-12">

                <% if (result.page == 1) { %>
                    <span display="none"></span>
                <% } else if (result.page >= 1) { %>
                    <a style="float: left" href="/articles/page/<%= result.page-1 %>" class="btn btn-info">< Anterior</a>
                <% } %>

                <% if (result.next) { %>
                    <a style="float: right" href="/articles/page/<%= result.page+1 %>" class="btn btn-info">PrÃ³ximo ></a>
                <% } %>

            </div>
        </div>  
    </div>

