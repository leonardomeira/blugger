    <div class="card mt-5 mb-5">
        <div class="card-header">
            <h2>Entrar no Blugger</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/authenticate">
                <label for="email">E-mail</label>
                <input class="form-control mb-3" id="email" type="email" name="email">
                <label for="password">Senha</label>
                <input class="form-control mb-3" id="password" type="password" name="password">
                <button type="submit" class="btn btn-info btn-block mb-5"><strong>Login</strong></button>
                <h4 class="mb-3">Novo por aqui?</h4>
                <a style="display: block;" class="btn btn-success" href="/register"><strong>Registrar-se</strong></a>
            </form>
        </div>
    </div>
</div>

