<%- include ('../../partials/head.ejs') %>

    <div class="container">
        <br>
        <h1>Categorias</h1>
        <br>
        <a class="btn btn-info" href="/admin/categories/new">+ Nova</a>
        <br><br>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <%categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title%></th>
                    <th><%= category.slug %></th>
                    <th>
                        <button class="btn btn-warning">Editar</button>
                        <form method="POST" action="/admin/categories/delete" style="display: inline" onsubmit="deleteVerification(event, this)">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        function deleteVerification(event, form) {
            event.preventDefault()
            confirm('Você deseja realmente deletar esta categoria?')
            if (confirm) {
                form.submit()
            }
        }
    </script>
